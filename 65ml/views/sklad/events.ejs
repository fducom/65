
<div class="container">
			
	<h3>Духи</h3>
	
<div class="col-xs-12 col-sm-12">	 
		 <div id="carousel-example" class="carousel slide hidden-xs" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="row">
					   <% _.each(sklads, function(sklad) { %>
					   <tr data-id="<%= sklad.id %>" data-model="sklad">
                        <div class="col-sm-3">
                            <div class="col-item">
                                <div class="photo">
                                <a href="/sklad/show/<%= sklad.id %>"><img src="<%= sklad.img %>"  width="100%" class="img-responsive" alt="a" /></a>
                                </div>
                                <div class="info">
                                    <div class="row">
                                        <div class="price col-md-6">
                                            <h5>
                                               <a href="/sklad/show/<%= sklad.id %>"><%= sklad.title %></a></h5>
                                            <h5 class="price-text-color">
                                                <%= sklad.price %></h5>
                                        </div>
                                        <div class="rating hidden-sm col-md-6">
                                            <i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                            </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                            </i><i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                    <div class="separator clear-left">
                                        <p class="btn-add">
                                            <i class="fa fa-shopping-cart"></i><a href="#" class="hidden-sm">Отложить</a></p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="/sklad/show/<%= sklad.id %>"class="hidden-sm">Детали</a></p>
                                    </div>
										<% if (session.authenticated && session.User.admin) { %>
		
			
			<td><a href="/sklad/edit/<%= sklad.id %>" class="btn btn-sm btn-warning">Редагувати</a></td>
	
			<td><form action="/sklad/destroy/<%= sklad.id %>" method="POST">
				<input type="hidden" name="_method" value="Видалити"/>
				<input type="submit" class="btn btn-sm btn-danger" value="Видалити"/>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form></td>
		<%} %>
		
			</p>
                                    <div class="clearfix">
                                    </div>
                                </div>
                            </div>
                        </div>
                    	</tr> 
	
		
		</tr> 

		<% }) %>
		
                    </div>
                </div>
            </div>
        </div>
    </div>
		

</div>
