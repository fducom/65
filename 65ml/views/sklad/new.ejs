<div class="container ">

<div class="col-xs-12 col-sm-9">
<% if (session.authenticated && session.User.admin) { %>	
<form action="/sklad/create" method="POST" id="sign-up-form" style="padding:20px;">

	<h2 class="form-signin-heading">Создать товар.</h2>

	<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>

	
	<input type="hidden" value="<%= session.User.id %>" name="name" type="text" class="form-control"/>
		

	<div class="control-group">
	<input type="text" class="form-control" placeholder="Название" name="title">
	</div>

	
    	
<br>
	<div class="control-group">
	<textarea name="text"  id="redactor"/></textarea>	
		
	</div><br>
	<div class="control-group" type="text">
	
			<input name="img" type="text" placeholder="Изображение" class="form-control"/>
			</div>
		<br>
		<div class="control-group" type="text">
	
			<input name="price" type="text" placeholder="Цена" class="form-control"/>
			</div>
		<br>
	<div class="control-group" type="text">
		<select name="category" class="form-control">
		<option  value="">Динамичиская страница</option>
		<option  value="indx">Главная</option>
		<option  value="events">Акции</option>
		<option  value="accessorize">Аксессуары</option>
		<option  value="casuals">Одежда</option>
		<option  value="heels">Обувь</option>
		<option  value="taxi">Доставка</option>
		</select>
	</div>
<br>
	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Створити ак"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>

 <%} else { res.redirect('/session/new'); } %>
 </div>
</div>