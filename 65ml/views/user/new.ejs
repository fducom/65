<div class="container ">
<div class="col-xs-12 col-sm-4">
<form action="/user/create" method="POST" id="sign-up-form" style="padding:20px;">

	<h2 class="form-signin-heading">Створити ак.</h2>

	<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
	<% Object.keys(flash.err).forEach(function(error) { %>
		<li><%- JSON.stringify(flash.err[error]) %></li>
	<% }) %>
	</ul>
	<% } %>

	<p>
	<div class="control-group">
	<input type="text" class="form-control" placeholder="Ім'я" name="name">
	</div></p>	
	<p>
	<div class="control-group">
	<input type="text" class="form-control" placeholder="email адреса" name="email">
	</div></p>
	<p>
	<div class="control-group">
	<input type="password" class="form-control" placeholder="password" name="password" id="password">
	</div></p>
	<p>
	<div class="control-group">
	<input type="password" class="form-control" placeholder="password повторно" name="confirmation">
	<br />
	</div></p>

	<input type="submit" class="btn btn-lg btn-primary btn-block" value="Створити ак"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
</div>
</div>